{
    "name": "cloud",
    "version": "1.0.0",
    "description": "A Nuxt.js Cloud",
    "author": "exomia",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server --exec babel-node",
        "build": "nuxt build",
        "start": "cross-env NODE_ENV=production babel-node server/index.js",
        "generate": "nuxt generate",
        "update": "npm prune && npm-check -u"
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.0.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "cookieparser": "^0.1.0",
        "nuxt": "^1.4.1",
        "nuxt-i18n": "^4.0.0",
        "vuelidate": "^0.7.4",
        "express": "^4.15.3",
        "babel-register": "^6.26.0"
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "node-sass": "^4.9.0",
        "nodemon": "^1.17.5",
        "sass-loader": "^7.0.3"
    },
    "nodemonConfig": {
        "delay": "50",
        "watch": [
            "*.*"
        ],
        "ext": "vue js scss sass json svg png jpg jpeg"
    }
}
